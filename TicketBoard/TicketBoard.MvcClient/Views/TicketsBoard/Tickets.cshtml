@model IEnumerable<TicketViewModel>

<div>
    @foreach (var ticket in Model)
    {
        <div class="border mb-4">
            <div class="row mb-3">
                <div class="col-2">@ticket.TicketId</div>
                <div class="col-4">@ticket.Title</div>
                <div class="col-4">@ticket.DestinationPlace</div>
            </div>
            <div class="row text-center">
                <a class="col-3 btn btn-dark" asp-action="UpdateTicket" asp-route-id="@ticket.TicketId">Update</a>
                <a class="col-3 btn btn-danger" asp-action="DeleteTicket" asp-route-id="@ticket.TicketId">Delete</a>
            </div>
        </div>
    }
    <a class="btn btn-outline-secondary" asp-action="AddTicket">Add ticket</a>
</div>